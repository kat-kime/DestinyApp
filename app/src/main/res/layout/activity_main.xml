<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainTodayScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Today's Score"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mainScoreCount"
        android:layout_width="251dp"
        android:layout_height="172dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:text="10"
        android:textAlignment="center"
        android:textSize="120sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainTodayScoreText" />

    <TextView
        android:id="@+id/mainCompleteText"
        android:layout_width="130dp"
        android:layout_height="28dp"
        android:layout_marginTop="32dp"
        android:text="Complete:"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/mainScoreCount"
        app:layout_constraintTop_toBottomOf="@+id/mainScoreCount" />

    <TextView
        android:id="@+id/mainIncompleteText"
        android:layout_width="130dp"
        android:layout_height="29dp"
        android:layout_marginTop="28dp"
        android:text="Incomplete:"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/mainCompleteText"
        app:layout_constraintStart_toStartOf="@+id/mainCompleteText"
        app:layout_constraintTop_toBottomOf="@+id/mainCompleteText" />

    <EditText
        android:id="@+id/mainCompleteCount"
        android:layout_width="30dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="number"
        android:text="3"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/mainScoreCount"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toEndOf="@+id/mainCompleteText"
        app:layout_constraintTop_toTopOf="@+id/mainCompleteText" />

    <EditText
        android:id="@+id/mainIncompleteCount"
        android:layout_width="35dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="number"
        android:text="3"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/mainCompleteCount"
        app:layout_constraintStart_toStartOf="@+id/mainCompleteCount"
        app:layout_constraintTop_toTopOf="@+id/mainIncompleteText" />

    <Button
        android:id="@+id/mainUpdateButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainIncompleteText" />
</androidx.constraintlayout.widget.ConstraintLayout>